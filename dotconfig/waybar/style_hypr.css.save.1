}

window#waybar {
/*    background-color: rgba(43, 48, 59, 0.8);*/
    border-radius: 14px;
    background-color: #282a36;
    border: 1px solid #c0c0c0;
    color: #c0c0c0;
    transition-property: background-color;
    transition-duration: .5s;
    padding: 3px 3px 3px 3px;
 }


window#waybar.hidden {
    opacity: 0.2;
}

